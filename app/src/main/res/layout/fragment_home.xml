<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:padding="12dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/srchview_explore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="54dp"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingRight="4dp"
        android:paddingEnd="4dp"
        android:background="@drawable/spn_rounded_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgview_sort_explore"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_sort_filter"
        app:layout_constraintBottom_toBottomOf="@+id/srchview_explore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/srchview_explore"
        app:layout_constraintTop_toTopOf="@+id/srchview_explore" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rycview_profiles_explore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/srchview_explore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>